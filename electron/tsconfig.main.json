{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "outDir": "../dist-electron",
    "rootDir": "..",
    "esModuleInterop": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": false
  },
  "include": [
    "main.ts",
    "preload.ts",
    "../src/backend/**/*.ts",
    "../src/types/**/*.ts"
  ]
}
